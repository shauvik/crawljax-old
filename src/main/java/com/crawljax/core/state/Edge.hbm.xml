<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.crawljax.core.state.Edge" table="Edge">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
		<many-to-one name="fromStateVertix" cascade="save-update,persist"
          class="com.crawljax.core.state.StateVertix" column="FROMSTATEVERTIX_ID" />
		
		<many-to-one name="toStateVertix" cascade="save-update,persist"
          class="com.crawljax.core.state.StateVertix" column="TOSTATEVERTIX_ID" />
		
		<!-- <many-to-one name="eventable" cascade="save-update,persist"
          class="com.crawljax.core.state.Eventable" column="EVENTABLE_ID" />-->
    </class>
</hibernate-mapping>