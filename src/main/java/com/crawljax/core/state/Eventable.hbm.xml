<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.crawljax.core.state.Eventable" table="Eventable">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="eventType" />

		<many-to-one name="identification" cascade="save-update,persist"
			class="com.crawljax.core.state.Identification" column="IDENTIFICATION_ID" />
        
		<many-to-one name="edge" cascade="save-update,persist"
			class="com.crawljax.core.state.Edge" column="EDGE_ID" />

		<many-to-one name="element" cascade="save-update,persist"
			class="com.crawljax.core.state.Element" column="ELEMENT_ID" />


	  <list name="relatedFormInputs" cascade="all">
	      <key column="eventable_id"/>
	      <index column="index_col"/>
	      <one-to-many class="com.crawljax.forms.FormInput"/>
	  </list>
  
  
			
	</class>
</hibernate-mapping>