<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.crawljax.core.state.Element" table="Element">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="tag" />
		<property name="text" />

	   
	  <list name="attributes" cascade="all">
	      <key column="element_id"/>
	      <index column="index_col"/>
	      <one-to-many class="com.crawljax.core.state.Attribute"/>
	  </list>
			
	</class>
</hibernate-mapping>