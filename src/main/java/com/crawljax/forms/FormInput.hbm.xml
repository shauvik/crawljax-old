<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.crawljax.forms.FormInput" table="FormInput">
        
        <id name="id" column="forminput_id">
            <generator class="native"/>
        </id>
        
        <property name="type" />
        <property name="name" />
        <property name="multiple" type="true_false"/>
		
        <set name="inputValues" cascade="save-update,persist">
          <key column="INPUTVALUE_ID" not-null="true"/>
          <one-to-many class="com.crawljax.forms.InputValue"/>
        </set>          
    </class>
</hibernate-mapping>